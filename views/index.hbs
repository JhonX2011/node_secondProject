{{>header}}
<h1 style="text-align: center">Iniciar sesión</h1>
<form action="/validarSesion" method="post" style="padding: 20px;">
    <div align='center'>
        <div class="form-group">
            <label class="title">Usuario</label>
            <input type="email" class="col-sm-2 form-control" placeholder="Correo electronico" name="usuario" required>
        </div>
        <div class="form-group">
            <label class="title">Contraseña</label>
            <input type="password" class="col-2 form-control" placeholder="Cedula" name="contrasena" required>
        </div>
        <button class="btn btn-primary">Ingresar</button>
    </div>
</form>
<div align='center'>
    <a href="/registro_user" class="btn btn-link">Registrarse?</a>
</div>
{{>footer}}